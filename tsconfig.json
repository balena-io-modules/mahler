{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"outDir": "build",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022",
		"declaration": true,
		"skipLibCheck": true,
		"paths": {
			"mahler": [
				"lib/index.ts"
			],
			"mahler/testing": [
				"lib/testing/index.ts"
			],
			"mahler/planner": [
				"lib/planner/index.ts"
			],
			"~/test-utils": [
				"tests/index.ts"
			]
		}
	},
	"include": [
		"lib/**/*.ts",
		"tests/**/*.ts"
	]
}
